<section class="MenusBody">
  <p class="AddMenuItemLabel">You are adding  an item in "<%= @menu.name %>" menu</p>
<section>
  <div>
    <%= form_with(url: "/menuitems", method: "post", class: "Add-menuitem") do %>
      <%= hidden_field_tag(name='id',value = @menu.id)%>
      <%= hidden_field_tag(name='submenu_id',value = params[:submenu_id])%>
      <section>
      <%= text_field_tag(name = 'name', value = nil,
                         class: "AddMenuitem-name",
                         placeholder: "name ?")
      %>
      </section>
      <section>
      <%= text_field_tag(name = 'price', value = nil,
                         class: "AddMenuitem-price",
                         placeholder: "price?")
      %>
      </section>
      <section>
      <%= text_field_tag(name = 'image_url', value = nil,
                         class: "AddMenuitem-image_url",
                         placeholder: "image url?")
      %>
      </section>
      <section>
      <%= text_field_tag(name = 'description', value = nil,
                         class: "AddMenuitem-description",
                         placeholder: "description?")
      %>
      </section>
      <section>
      <%= button_tag(value='Add', class: "Add-Button")  %>
      </section>
    <% end %>
  </div>
</section>
</section>
