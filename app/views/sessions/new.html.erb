<h1 class="Form-Title">Sign in</h1>

<section class="UsersNew">
  <%= form_with(url: sessions_path, method: "post") do %>
   <div class="Form-Section">
    <p class="Input-Label">
      Email
    </p>
    <%= email_field_tag 'email', nil,
                        autofocus: true,
                        placeholder: "email",
                        class: "Form-Input"
    %>
   </div>
   <div class="Form-Section">
    <p class="Input-Label">
      Password
    </p>
    <%= password_field_tag 'password', nil,
                           placeholder: "password",
                           class: "Form-Input"
    %>
   </div>
   <%= submit_tag 'Sign-in', class:"Form-Submit" %>
  <% end %>
</section>
